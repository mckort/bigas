    "/mcp/tools/linkedin_exchange_code": {
      "post": {
        "summary": "Exchange LinkedIn OAuth authorization code.",
        "description": "Exchanges a LinkedIn OAuth authorization code for tokens without exposing the client secret in terminal history.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string",
                    "description": "Authorization code from /linkedin/callback."
                  },
                  "redirect_uri": {
                    "type": "string",
                    "description": "Redirect URI used in the OAuth flow."
                  },
                  "include_access_token": {
                    "type": "boolean",
                    "description": "If true, includes the access_token in the response.",
                    "default": false
                  }
                },
                "required": ["code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token exchange result.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/mcp/tools/reddit_exchange_code": {
      "post": {
        "summary": "Exchange Reddit OAuth authorization code.",
        "description": "Exchanges a Reddit OAuth authorization code for tokens without exposing the client secret in terminal history.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string",
                    "description": "Authorization code from the Reddit OAuth callback."
                  },
                  "redirect_uri": {
                    "type": "string",
                    "description": "Redirect URI used in the OAuth flow."
                  }
                },
                "required": ["code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token exchange result.",
            "content": {
              "application/json": {
