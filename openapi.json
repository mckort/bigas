          "400": {
            "description": "Invalid input."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/mcp/tools/progress_updates": {
      "post": {
        "summary": "Generate a team progress update from Jira issues.",
        "description": "Uses Jira issues moved to Done in the last N days to generate a progress update and optionally post it to Discord.",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "days": {
                    "type": "integer",
                    "description": "Number of days to look back (period for the update).",
                    "default": 7,
                    "minimum": 1,
                    "maximum": 365
                  },
                  "post_to_discord": {
                    "type": "boolean",
                    "description": "Post the message to the product Discord webhook.",
                    "default": true
                  },
                  "jql_extra": {
                    "type": "string",
                    "description": "JQL fragment to narrow results; default AND statusCategory = Done.",
                    "default": "AND statusCategory = Done"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Progress update result.",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          },
          "400": {
            "description": "Invalid input."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    }
  }
