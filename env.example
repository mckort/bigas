# Google Analytics 4 Configuration
GA4_PROPERTY_ID=your_ga4_property_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Jira Cloud Configuration (for create_release_notes)
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your_jira_email_here
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_PROJECT_KEY=YOURPROJECT
# Optional: extra JQL to narrow results (include leading AND/OR if needed)
JIRA_JQL_EXTRA=AND statusCategory = Done

# Discord Integration
# Marketing channel (used by weekly reports, trend analysis, underperforming pages, etc.)
DISCORD_WEBHOOK_URL_MARKETING=your_marketing_discord_webhook_url_here
# Product channel (used by create_release_notes)
DISCORD_WEBHOOK_URL_PRODUCT=your_product_discord_webhook_url_here

# Google Cloud Configuration
GOOGLE_PROJECT_ID=your_google_cloud_project_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email_here

# Storage Configuration (Optional - defaults to 'bigas-analytics-reports')
STORAGE_BUCKET_NAME=your_storage_bucket_name_here

# LinkedIn Ads (Optional - for paid ads reporting)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REFRESH_TOKEN=your_linkedin_refresh_token
LINKEDIN_AD_ACCOUNT_URN=your_account_id_or_urn
# Optional: LINKEDIN_VERSION=202601

# Reddit Ads (Optional - for paid ads reporting)
# Create app in Reddit Business Manager; redirect URI must match your callback, e.g. https://your-domain.com/reddit/callback
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_REFRESH_TOKEN=your_reddit_refresh_token
# Optional: REDDIT_AD_ACCOUNT_ID=
# Optional: REDDIT_REDIRECT_URI (must match app; used when refreshing token). Defaults to Cloud Run callback.your_reddit_ad_account_id

# SEO Configuration (Optional - for targeted keyword analysis)
TARGET_KEYWORDS=sustainable_swag:eco_friendly_promotional_clothing:eco_friendly_swag:swag_for_remote_teams:promotional_clothing_for_distributed_teams

# Docker Configuration
DOCKER_REPO=your_docker_repo_name_here
IMAGE_NAME=your_image_name_here
IMAGE_TAG=latest

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=false
PORT=5000

# Testing Configuration
# Replace with your deployed Google Cloud Run URL (ends with .app)
# Example: https://your-project-name-123456789012.region.run.app
SERVER_URL=https://your-deployed-server-url.app 